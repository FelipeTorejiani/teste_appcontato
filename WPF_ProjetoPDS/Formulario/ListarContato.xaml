<Window x:Class="WPF_ProjetoPDS.Formulario.ListarContato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ProjetoPDS.Formulario"
        mc:Ignorable="d"
        Title="ListarContato" Height="450" Width="890">
    <Grid x:Name="DTG_ItemsSource" Height="NaN" Margin="24,10,0,0" Width="NaN">
        <Label Content="LISTA DE CONTATO:" Margin="284,27,284,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="36" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Width="NaN"/>
        <DataGrid x:Name="DT" d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="40,110,24,98" Width="NaN"/>

    </Grid>
</Window>
